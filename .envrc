#!/usr/bin/env bash

# Check if gke-gcloud-auth-plugin is in PATH
if command -v gke-gcloud-auth-plugin >/dev/null 2>&1; then
    echo "✅ gke-gcloud-auth-plugin is installed and in your PATH."
else
    echo "❌ gke-gcloud-auth-plugin is NOT installed or not in your PATH."
    echo "👉 Install it with: gcloud components install gke-gcloud-auth-plugin"
    exit 1
fi
