#!/usr/bin/env bash

export PROJECT_ROOT
PROJECT_ROOT="$(git rev-parse --show-toplevel)"

if command -v gcloud >/dev/null 2>&1; then
    gcloud auth configure-docker gcr.io --quiet 2>/dev/null
    echo "âœ… gcloud command is available and Docker authentication is configured."
    echo "ğŸ‘‰ If you encounter issues, try running: gcloud auth login"
else
    echo "âŒ gcloud command not found. Please install the Google Cloud SDK."
    echo "ğŸ‘‰ If gcloud is not installed, follow the instructions at: https://cloud.google.com/sdk/docs/install"
    exit 0
fi

# Check if the `gke-gcloud-auth-plugin` command is available in the PATH
if command -v gke-gcloud-auth-plugin >/dev/null 2>&1; then
    echo "âœ… gke-gcloud-auth-plugin is installed and in your PATH."    
    exit 0
else
    echo "âŒ gke-gcloud-auth-plugin is not installed in your PATH."
    echo "ğŸ‘‰ Install it with: https://cloud.google.com/sdk/docs/install"
    gcloud components install gke-gcloud-auth-plugin kubectl --quiet
    exit 1
fi